@page "/"
@inject ServicioSesionUsuario Sesion
@inject NavigationManager Navigation


    <div class="d-flex justify-content-center align-items-center">
        <h1>Bienvenido a Centro Eventos</h1>
    </div>
@if (!Sesion.EstaAutenticado()){
    <div class="d-flex justify-content-center align-items-center">
        <p>Registrate o iniciá sesión para empezar a usar la plataforma.</p>
    </div>
    
    <div class="mt-3 d-flex flex-grow-1">
        <div class="login-section col-12 col-md-6 d-flex justify-content-center align-items-center">
            <a class="btn btn-lg lift-on-hover" href="/registrar">REGISTRARSE</a>
        </div>
        <div class="registrar-section col-12 col-md-6 d-flex justify-content-center align-items-center">
            <a class="btn btn-lg lift-on-hover" href="/login">INICIAR SESIÓN</a>
        </div>
    </div>
}
