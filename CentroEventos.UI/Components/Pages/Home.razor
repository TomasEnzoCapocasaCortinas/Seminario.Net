@page "/"
@inject ServicioSesionUsuario Sesion
@inject NavigationManager Navigation

<h1>Bienvenido a CentroEventos</h1>

@if (Sesion.EstaAutenticado())
{
    <p>Hola <strong>@Sesion.ObtenerUsuarioActual().Nombre</strong>, ya estás logueado.</p>

    <div class="mt-3">
        <a class="btn btn-primary me-2" href="/reservas">Ver reservas</a>
        <a class="btn btn-secondary" href="/perfil">Mi perfil</a> <!-- si pensás agregarlo -->
    </div>
}
else
{
    <p>Podés registrarte o iniciar sesión para empezar a usar la plataforma.</p>

    <div class="mt-3">
        <a class="btn btn-success me-2" href="/registrar">Registrarse</a>
        <a class="btn btn-outline-primary" href="/login">Iniciar sesión</a>
    </div>
}
